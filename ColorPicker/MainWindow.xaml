<Window x:Class="ColorPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorPicker"
        mc:Ignorable="d"
        Title="Color Picker" Height="350" Width="525" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Ellipse x:Name="ColorWheel" DockPanel.Dock="Left" Height="300" Width="300" Margin="5" StrokeThickness="4" MouseMove="ColorWheel_MouseMove">
            <Ellipse.Fill>
                <ImageBrush x:Name="ColorImage" ImageSource="Resources/ColorCircle.png"/>
            </Ellipse.Fill>
        </Ellipse>
        <Border DockPanel.Dock="Right" BorderThickness="1" CornerRadius="2" Margin="5" BorderBrush="Black">
            <StackPanel >
                <Label>Color Picker</Label>
                <StackPanel Orientation="Horizontal">
                    <Label >Hex:</Label>
                    <TextBox x:Name="txtBxHex" HorizontalAlignment="Stretch" VerticalAlignment="Center"  >#123456</TextBox>
                </StackPanel>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
